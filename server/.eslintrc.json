{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": [0],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "off"
  }
}
